	<!-- POM Relationships -->
	<groupId>it.unibo.lmc.pjdbc</groupId>
	<artifactId>Pjdbc</artifactId>
	<version>0.0.1</version>
	<dependencies>
	
		<!-- test unitari -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>

		<!-- log framework -->
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
		</dependency>
		
		<!-- quartz (cron service) -->
		<dependency>
			<groupId>quartz</groupId>
			<artifactId>quartz</artifactId>
			<version>1.5.2</version>
		</dependency>
		
		<!-- prolog -->
		<dependency>
			<groupId>it.unibo.tuProlog</groupId>
			<artifactId>2p</artifactId>
			<version>2.1</version>
		</dependency>
		
		<!-- mysql -->
		<!--
		<dependency>
			<groupId>mysql</groupId>
			<artifactId>mysql-connector-java</artifactId>
			<version>5.1.6</version>
		</dependency>
		-->

	</dependencies>


	<!-- Project Information -->
	<name>Pjdbc</name>
	<url>http://maven.apache.org</url>
	<licenses>
		<license>
			<name>The BSD License</name>
			<url>LICENSE.txt</url>
			<distribution>jar</distribution>
		</license>
	</licenses>
	<developers>
		<developer>
			<id>yoghi</id>
			<name>Stefano Tamagnini</name>
			<email>stefano.tamagnini@studio.unibo.it</email>
			<url>http://blog.sigmalab.net</url>
			<organization>Sigmalab</organization>
			<organizationUrl>http://sigmalab.net</organizationUrl>
			<roles>
				<role>Architect Designer</role>
				<role>Developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>
	<description>
		Driver JDBC for connect to prolog database 
	</description>

	<!-- Build Settings -->
	<packaging>jar</packaging>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
	<build>
		<finalName>brill_tatpa</finalName>

		<!-- FTP support -->
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
			</extension>
		</extensions>

		<plugins>
		
			<!-- generazione output -->

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>

			<!-- site plugin e dipendenze -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>2.0-beta-6-SNAPSHOT</version>
				<configuration>
					<locales>it</locales>
					<inputEncoding>UTF-8</inputEncoding>
					<!-- <outputEncoding>UTF-8</outputEncoding> -->
					<!--  <outputEncoding>ISO-8859-1</outputEncoding> -->
					<!-- <templateFile>${basedir}/default-site.vm</templateFile>  -->
				</configuration>
			</plugin>

			<!-- possibilita di compile JDK 1.6 -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>RELEASE</version>
				<configuration>
					<executable>/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Commands/javac</executable>
					<compilerVersion>1.6</compilerVersion>
					<verbose>true</verbose>
          			<fork>true</fork>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

		</plugins>
	</build>
	
